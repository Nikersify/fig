{
  "name": "figjs",
  "version": "0.1.2",
  "description": "experimental front-end js framework",
  "main": "dist/fig.js",
  "author": "nikersify <nikersify@nikerino.com>",
  "license": "MIT",
  "devDependencies": {
    "ava": "^0.19.1",
    "babel-core": "^6.25.0",
    "babel-preset-env": "^1.5.2",
    "big-eye": "^0.0.2",
    "browserify": "^14.4.0",
    "css": "^2.2.1",
    "figify": "^0.1.2",
    "get-port": "^3.1.0",
    "jsdom": "^11.0.0",
    "listr": "^0.12.0",
    "lodash.isequal": "^4.5.0",
    "nanomorph": "^5.1.2",
    "rollup": "^0.43.0",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-strip": "^1.1.1",
    "uglify-js": "^3.0.19",
    "xo": "^0.18.2"
  },
  "scripts": {
    "build": "node build/build.js",
    "build:watch": "big-eye 'npm run build' -w src/",
    "prepublish": "npm run build",
    "test": "xo && ava",
    "test:watch": "ava --watch"
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "source": [
      "!**/src/**"
    ]
  },
  "babel": {
    "presets": [
      "@ava/stage-4"
    ]
  },
  "xo": {
    "semicolon": false,
    "envs": [
      "browser"
    ],
    "rules": {
      "max-len": [
        "error",
        80
      ]
    },
    "ignore": [
      "**/*.{fig,pug}.js"
    ]
  },
  "dependencies": {}
}
